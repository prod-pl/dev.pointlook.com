<a:application xmlns:a="http://ajax.org/2005/aml">
    <a:hbox edge="5 0 0">
        <a:label margin="5 10 0 0" width="120">Name</a:label>
        <a:textbox id="tbSFTPMountPoint"
          flex       = "1"
          focusselect="true"
          maxheight="27"
          skin       = "forminput" />
    </a:hbox>
    <a:hbox edge="5 0 0">
        <a:label margin="5 10 0 0" width="120">Hostname</a:label>
        <a:textbox id="tbSFTPHost"
          margin          = "0 10 0 0"
          flex            = "1"
          skin            = "forminput"
          focusselect     = "true"
          maxheight="27"
          maxlength       = "255" />
          <!--initial-message = "myserver.example.com" />-->
        <a:label margin="5 10 0 0">Port</a:label>
        <a:textbox id="tbSFTPPort"
          pattern="/^\d{1,5}$/"
          width="75"
          skin="forminput"
          focusselect="true"
          minlength="1"
          maxlength="5"
          maxheight="27"
          value="22"
          invalidmsg="Please enter a valid port" />
    </a:hbox>
    <a:hbox edge="5 0 0">
        <a:label margin="5 10 0 0" width="120">Username</a:label>
        <a:textbox id="tbSFTPUser"
          flex       = "1"
          focusselect="true"
          maxheight="27"
          type       = "username"
          skin       = "forminput" />
    </a:hbox>
    <a:hbox edge="5 0 0">
        <a:label margin="5 10 0 0" width="120">Password (optional)</a:label>
        <a:secret id="tbSFTPPass"
          flex       = "1"
          maxheight="27"
          focusselect="true"
          skin       = "forminput" />
    </a:hbox>
    <a:hbox edge="5 0 0">
        <a:label margin="5 10 0 0" width="120">Remote Path</a:label>
        <a:textbox id="tbSFTPRemote"
          flex            = "1"
          maxheight="27"
          focusselect     = "true"
          skin            = "forminput"
          value           = "/" />
    </a:hbox>
</a:application>